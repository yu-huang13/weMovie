                function(data, status){
                    alert(data['message']);
                });
            });
        });

        function createMissionOnClick(videoName, vu, duration){
            member_clear();
            $("#videoName").val(videoName);
            $("#vu").val(vu);
            $("#duration").val(duration);
        }

