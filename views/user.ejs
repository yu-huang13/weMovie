            } else if (option == "myMission"){
                document.getElementById("myMission").style.display="block";
                document.getElementById("myUpload").style.display="none";               
            } else {
                document.getElementById("myMission").style.display="none";
                document.getElementById("myUpload").style.display="none"; 
            }          
        }

