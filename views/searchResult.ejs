        <div class="wrapper">
            <div class="container">
            <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                <div class="section">
                    <ul id="water-fall">
                        <% records.forEach(function(record, index){ %>
